{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/*.md",
        "**/*.yml",
        "**/*.test.js",
        "**/makefile",
        ".*"
      ],
      "verifyAccess": false,
      "verifyRegistry": false
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
